
<div class="col s12 center novo_aporte_container">
	<div class="titulo_inicio">Novo Aporte</div>

	<form method="POST" action="" enctype="multipart/form-data">

		<div class="col s6">


			<div class="row">
				<div class="col s12">
					Perfil
					<div class="input-field">
						<select class="browser-default perfil_saque_select" name="id_plano" class="">
							<%
							if (typeof data.planos != 'undefined' && data.planos.length > 0) {
								for (var i = 0; i < data.planos.length; i++) { %>
								<option value="<%= data.planos[i].id %>"> <%= data.planos[i].nome %></option>				
								<% }
							} %>
						</select>
					</div>
				</div>				
			</div>
			

			<div class="row">
				<div class="col s12">
					Valor:
					<div class="input-field inline">
						<input name="valor" type="number">
					</div>		

				</div> 
			</div>

			<div class="row">
				<div class="col s12">
					Senha:
					<div class="input-field inline">
						<input name="senha" type="password" id="senha_saque">
					</div>

				</div>
			</div>
		</div>

		<div class="card col s6 light">
			<div class="titulo_inicio">Dados para Novo Aporte</div>
			<p><strong>Contatar o suporte: (54) 99999-7938</strong>

