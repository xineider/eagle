
<div class="col s12 center">
	<div class="titulo_inicio">Extrato</div>
	
	<div class="card light">
		<table class="table-full-width">
			<thead>
				<tr>
					<th>Data</th>
					<th>Operação</th>
					<th>Plano</th>
					<th>Valor</th>
				</tr>
			</thead>
			<tbody>
				
				<%
				if (typeof data.extrato != 'undefined' && data.extrato.length > 0) {
					for (var i = 0; i < data.extrato.length; i++) { %>
						<tr>
							<td><%= data.extrato[i].data_cadastro %></td>
							<td><%= data.extrato[i].mensagem %></td>
							<td><%= data.extrato[i].nome_plano %></td>
							<td style="width: 30%;">R$ <%= data.extrato[i].valor %></td>
						</tr>
						
						<% } }else{%>
						<tr>
							<td class="center" colspan="4">Você não possui extrato no momento</td>
						</tr>
						<%}%>
						
					</tbody>
				</table>
			</div>
			
		</div>
		
		
		