<div class="col s12 center">
	<div class="titulo_inicio">Cadastrar Usuário</div>
	
	
	<%if(usuario.nivel == 4 || usuario.nivel == 5){ %>
		
		
		<form method="POST" action="" enctype="multipart/form-data">
			
			
			<div class="card light row">					
				
				<div class="input-field col s12">
					<label for="login">Login</label>
					<input class="validate" type="text" name="login">
				</div>
				
				<div class="input-field col s12">
					<label for="nome">Nome</label>
					<input class="validate" type="text" name="nome">
				</div>
				
				
				<div class="input-field col s12">
					<label for="nome">Email</label>
					<input class="validate" type="text" name="email">
				</div>
				
				<div class="input-field col s12">
					<label for="telefone">Telefone</label>
					<input class="validate tel" type="text" name="telefone">
				</div>

				<input type="hidden" name="id_coach" value="0">
				
				<div class="input-field col s12">
					<select name="nivel">
						<option value="0" selected>Coachee</option>
						<option value="1">Coach</option>
						<option value="2">Manager</option>
						<option value="3">Investidor</option>
						<option value="4">Coordenação</option>
						<% if(usuario.nivel == 5) { %>
							<option value="5">Administrador</option>
							<% } %>
							
						</select>
						<label for="nivel">Nível</label>						
					</div>
					
					<button data-href="/sistema/administracao/usuarios/cadastrar" data-action="/sistema/administracao/usuarios/" class="btn secondary ajax-submit margin-b-10">
						Salvar <i class="far fa-save-o" aria-hidden="true"></i>
					</button>
					
				</div>
			</form>
			
			
			
			
			
			<%}else{%>
				<div class="card light">Você não possui permissão para acessar esse conteúdo</div>
				<%}%>
				
			</div>