									Leia mais ...
								</a>                            
							</div>
					</div>

					<%if(i != j){%>
					<div class="col s6 content-columns light card">
							<div class="card-image">
								<a>
									<img src="<%= data.noticias[j].arquivo %>" >
								</a>
							</div>

							<div class="card-content">
								<div class="titulo_inicio_noticia">
									<%= data.noticias[j].titulo %>
								</div>
								<div class="descricao_inicio_noticia limitador_3_linhas center">
									<%= data.noticias[j].descricao %>
								</div>
								<a class="ajax-load" href="<%= data.link_sistema%>/ver_noticia/<%= data.noticias[j].id %>">
									Leia mais ...
								</a>                            
						</div>
					</div>

					<%}%>

				</div>
				
				<%}%>





