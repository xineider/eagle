<div style="
width: 100%;
height: 2px;
margin: 10px 0;    
background: -moz-linear-gradient(left, rgba(224,208,172,0) 0%, rgba(237,222,189,1) 25%, rgba(250,236,205,1) 50%, rgba(237,217,171,1) 75%, rgba(224,198,137,0) 100%);
background: -webkit-linear-gradient(left, rgba(224,208,172,0) 0%,rgba(237,222,189,1) 25%,rgba(250,236,205,1) 50%,rgba(237,217,171,1) 75%,rgba(224,198,137,0) 100%);
background: linear-gradient(to right, rgba(224,208,172,0) 0%,rgba(237,222,189,1) 25%,rgba(250,236,205,1) 50%,rgba(237,217,171,1) 75%,rgba(224,198,137,0) 100%);
filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#00e0d0ac', endColorstr='#00e0c689',GradientType=1 );"></div>

<div class="row">
	<div class="col s12 center avisos_container">
		<div class="titulo_inicio">Avisos</div>
		<%
		if (typeof data.avisos != 'undefined' && data.avisos.length > 0) {
			for (var i = 0; i < data.avisos.length; i++) { %>

			<div class="aviso_content">

				<%= data.avisos[i].aviso %> - <%= data.avisos[i].data_cadastro_formatado %>

				<div>
					<%= data.avisos[i].descricao %>
				</div>
			</div>

			<% } 
		} else{ %>
		<div>Não há avisos agora!</div>
		<%} %>

		<div class="col s12 margin-t-10">
			<a class="ajax-load btn light w12em" href="<%= data.link_sistema%>/todos_avisos" style="padding-left: 0; padding-right: 0;width: 100%;">Ver Todos Avisos</a>
		</div>

		<%if(usuario.nivel == 4 || usuario.nivel == 5){ %>
		<div class="col s12 margin-b-10 margin-t-10">
			<a class="btn light ajax-load w12em" href="<%= data.link_sistema%>/administracao/avisos">Editar Avisos</a>
		</div>
		<%}%>

	</div>
</div>


<div style="
