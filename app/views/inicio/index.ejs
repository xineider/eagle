height: 2px;
margin: 10px 0;    
background: -moz-linear-gradient(left, rgba(224,208,172,0) 0%, rgba(237,222,189,1) 25%, rgba(250,236,205,1) 50%, rgba(237,217,171,1) 75%, rgba(224,198,137,0) 100%);
background: -webkit-linear-gradient(left, rgba(224,208,172,0) 0%,rgba(237,222,189,1) 25%,rgba(250,236,205,1) 50%,rgba(237,217,171,1) 75%,rgba(224,198,137,0) 100%);
